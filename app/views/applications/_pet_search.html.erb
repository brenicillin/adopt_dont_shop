<%= form_with url: "/applications/#{@application.id}", method: :GET, local:true do |f| %>
  <h2> Add Pet to Application </h2>
  <%= f.label :pet_name %>
  <%= f.text_field :pet_name %>
  <%= f.submit "Search" %>
<% end %>

<% if @pet_search.present? %>
  <% @pet_search.distinct(:name).each do |pet| %>
    <p>
      <%= link_to pet.name, "/pets/#{pet.id}" %>
      <%= button_to "Adopt #{pet.name}", add_pet_application_path(@application, pet_id: pet.id), method: :post %>
    </p>
  <% end %>
<% end %>